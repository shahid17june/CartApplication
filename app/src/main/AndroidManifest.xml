<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="my.cart">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.RegistrationActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.VerificationActivity"
            android:label="@string/verification"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden|adjustUnspecified">
        </activity>

        <activity
            android:name=".activity.CartCreation"
            android:label="@string/create" />

        <activity android:name=".activity.CartsActivity"
            android:label="@string/cart"/>

    </application>

</manifest>